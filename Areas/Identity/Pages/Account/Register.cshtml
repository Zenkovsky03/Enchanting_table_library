@page
@model RegisterModel

@{
    ViewData["Title"] = "Rejestracja";
}

<div class="row justify-content-center py-5">
    <div class="col-12 col-md-8 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body p-4 p-md-5">
                <!-- Header -->
                <div class="text-center mb-4">
                    <span class="material-symbols-outlined text-primary" style="font-size: 3rem;">person_add</span>
                    <h1 class="h3 fw-bold mt-2">Rejestracja</h1>
                    <p class="text-muted">Utwórz konto, aby korzystać z biblioteki</p>
                </div>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Email Field -->
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-medium">
                            <span class="material-symbols-outlined align-middle me-1" style="font-size: 1.1rem;">mail</span>
                            Adres e-mail
                        </label>
                        <input asp-for="Input.Email"
                               class="form-control"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="nazwa@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label fw-medium">
                            <span class="material-symbols-outlined align-middle me-1" style="font-size: 1.1rem;">lock</span>
                            Hasło
                        </label>
                        <input asp-for="Input.Password"
                               class="form-control"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Wprowadź hasło" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="mb-4">
                        <label asp-for="Input.ConfirmPassword" class="form-label fw-medium">
                            <span class="material-symbols-outlined align-middle me-1" style="font-size: 1.1rem;">lock</span>
                            Potwierdź hasło
                        </label>
                        <input asp-for="Input.ConfirmPassword"
                               class="form-control"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Powtórz hasło" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid mb-3">
                        <button id="registerSubmit" type="submit" class="btn btn-primary">
                            <span class="material-symbols-outlined align-middle me-1">person_add</span>
                            Zarejestruj się
                        </button>
                    </div>
                </form>

                <!-- External Logins -->
                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <hr class="my-4" />
                    <p class="text-center text-muted small mb-3">lub zarejestruj się za pomocą</p>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="d-flex flex-wrap gap-2 justify-content-center">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }

                <!-- Login Link -->
                <hr class="my-4" />
                <div class="text-center">
                    <span class="text-muted">Masz już konto?</span>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-medium ms-1">
                        Zaloguj się
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
