@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Resetowanie hasła";
}

<div class="row justify-content-center py-5">
    <div class="col-12 col-md-8 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body p-4 p-md-5">
                <!-- Header -->
                <div class="text-center mb-4">
                    <span class="material-symbols-outlined text-primary" style="font-size: 3rem;">lock_reset</span>
                    <h1 class="h3 fw-bold mt-2">Resetowanie hasła</h1>
                    <p class="text-muted">Podaj adres e-mail powiązany z Twoim kontem, a wyślemy Ci link do zresetowania hasła.</p>
                </div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Email Field -->
                    <div class="mb-4">
                        <label asp-for="Input.Email" class="form-label fw-medium">
                            <span class="material-symbols-outlined align-middle me-1" style="font-size: 1.1rem;">mail</span>
                            Adres e-mail
                        </label>
                        <input asp-for="Input.Email"
                               class="form-control"
                               autocomplete="email"
                               aria-required="true"
                               placeholder="nazwa@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">
                            <span class="material-symbols-outlined align-middle me-1">send</span>
                            Wyślij link resetujący
                        </button>
                    </div>
                </form>

                <!-- Back to login -->
                <div class="text-center mt-4">
                    <a asp-page="./Login" class="text-decoration-none">
                        <span class="material-symbols-outlined align-middle me-1" style="font-size: 1rem;">arrow_back</span>
                        Powrót do logowania
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
