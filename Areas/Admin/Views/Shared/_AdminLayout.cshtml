@using System.Globalization
@using Microsoft.Extensions.Localization
@using Biblioteka
@inject IStringLocalizer<SharedResource> L

@{
    var theme = Context.Request.Cookies["ui-theme"];
    theme = string.Equals(theme, "dark", StringComparison.OrdinalIgnoreCase) ? "dark" : "light";

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="pl" data-bs-theme="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - Biblioteka</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Biblioteka.styles.css" asp-append-version="true" />

    <style>
        .admin-sidebar {
            width: 260px;
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
        }
        .admin-content {
            margin-left: 260px;
            min-height: 100vh;
        }
        .admin-nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            color: var(--bs-secondary-color);
            text-decoration: none;
            transition: all 0.15s;
        }
        .admin-nav-link:hover {
            background-color: var(--bs-tertiary-bg);
            color: var(--bs-body-color);
        }
        .admin-nav-link.active {
            background-color: var(--bs-primary);
            color: white;
        }
        .admin-nav-link .material-symbols-outlined {
            font-size: 1.25rem;
        }
        @@media (max-width: 991.98px) {
            .admin-sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s;
            }
            .admin-sidebar.show {
                transform: translateX(0);
            }
            .admin-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <aside class="admin-sidebar bg-body border-end d-flex flex-column" id="adminSidebar">
        <div class="p-3 border-bottom">
            <a href="/" class="d-flex align-items-center gap-2 text-decoration-none">
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                    <span class="material-symbols-outlined">local_library</span>
                </div>
                <div>
                    <div class="fw-bold text-body">Biblioteka</div>
                    <small class="text-muted">Panel administracyjny</small>
                </div>
            </a>
        </div>

        <nav class="flex-grow-1 p-3">
            <div class="mb-2 small text-muted text-uppercase fw-semibold px-2">Menu główne</div>
            <ul class="nav flex-column gap-1">
                <li class="nav-item">
                    <a class="admin-nav-link @(currentController == "Home" ? "active" : "")" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <span class="material-symbols-outlined">dashboard</span>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="admin-nav-link @(currentController == "Books" ? "active" : "")" asp-area="Admin" asp-controller="Books" asp-action="Index">
                        <span class="material-symbols-outlined">menu_book</span>
                        Książki
                    </a>
                </li>
                <li class="nav-item">
                    <a class="admin-nav-link @(currentController == "Categories" ? "active" : "")" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                        <span class="material-symbols-outlined">folder</span>
                        Kategorie
                    </a>
                </li>
                <li class="nav-item">
                    <a class="admin-nav-link @(currentController == "Tags" ? "active" : "")" asp-area="Admin" asp-controller="Tags" asp-action="Index">
                        <span class="material-symbols-outlined">sell</span>
                        Tagi
                    </a>
                </li>
            </ul>

            <div class="mb-2 mt-4 small text-muted text-uppercase fw-semibold px-2">Zarządzanie</div>
            <ul class="nav flex-column gap-1">
                <li class="nav-item">
                    <a class="admin-nav-link @(currentController == "Loans" ? "active" : "")" asp-area="Admin" asp-controller="Loans" asp-action="Index">
                        <span class="material-symbols-outlined">assignment</span>
                        Wypożyczenia
                    </a>
                </li>
                <li class="nav-item">
                    <a class="admin-nav-link @(currentController == "Users" ? "active" : "")" asp-area="Admin" asp-controller="Users" asp-action="Index">
                        <span class="material-symbols-outlined">group</span>
                        Użytkownicy
                    </a>
                </li>
                <li class="nav-item">
                    <a class="admin-nav-link @(currentController == "News" ? "active" : "")" asp-area="Admin" asp-controller="News" asp-action="Index">
                        <span class="material-symbols-outlined">newspaper</span>
                        Aktualności
                    </a>
                </li>
            </ul>
        </nav>

        <div class="p-3 border-top">
            <a class="admin-nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="material-symbols-outlined">arrow_back</span>
                Powrót do strony
            </a>
            <a class="admin-nav-link text-danger" asp-area="Identity" asp-page="/Account/Logout">
                <span class="material-symbols-outlined">logout</span>
                Wyloguj się
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="admin-content">
        <!-- Top Bar (mobile) -->
        <header class="d-lg-none bg-body border-bottom p-3 sticky-top">
            <div class="d-flex justify-content-between align-items-center">
                <button class="btn btn-outline-secondary" type="button" onclick="document.getElementById('adminSidebar').classList.toggle('show')">
                    <span class="material-symbols-outlined">menu</span>
                </button>
                <span class="fw-bold">Panel Admin</span>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm">
                    <span class="material-symbols-outlined" style="font-size: 1rem;">home</span>
                </a>
            </div>
        </header>

        <main class="p-4">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
