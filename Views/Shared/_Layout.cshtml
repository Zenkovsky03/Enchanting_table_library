@using System.Globalization
@using Microsoft.Extensions.Localization
@using Biblioteka
@inject IStringLocalizer<SharedResource> L

@{
    var uiCulture = CultureInfo.CurrentUICulture;
    var currentLang = uiCulture.Name;

    // Build clean returnUrl without lang param for theme switching
    var queryParams = Context.Request.Query
        .Where(q => !q.Key.Equals("lang", StringComparison.OrdinalIgnoreCase))
        .Select(q => $"{q.Key}={q.Value}");
    var cleanQuery = queryParams.Any() ? "?" + string.Join("&", queryParams) : "";
    var returnUrl = Context.Request.Path + cleanQuery;

    var theme = Context.Request.Cookies["ui-theme"];
    theme = string.Equals(theme, "dark", StringComparison.OrdinalIgnoreCase) ? "dark" : "light";
    var nextTheme = theme == "dark" ? "light" : "dark";
    var nextCulture = string.Equals(currentLang, "en-US", StringComparison.OrdinalIgnoreCase) ? "pl-PL" : "en-US";
}

<!DOCTYPE html>
<html lang="@uiCulture.TwoLetterISOLanguageName" data-bs-theme="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteka</title>

    <!-- Bootstrap CSS z CDN (pewne, działa zawsze) -->
    <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Google Fonts: Manrope + Material Symbols -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />


    <!-- Twoje style -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Style generowane przez ASP.NET -->
    <link rel="stylesheet" href="~/Biblioteka.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 bg-body">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Biblioteka</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@L["Nav.News"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Books" asp-action="Index">@L["Nav.Books"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Tree">@L["Nav.Categories"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Tags" asp-action="Browse">@L["Nav.Tags"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Search" asp-action="Advanced">@L["Nav.Search"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index">@L["Nav.Cart"]</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Loans" asp-action="My">@L["Nav.MyLoans"]</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">@L["Nav.Admin"]</a>
                            </li>
                        }
                        else if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Loans" asp-action="Index">@L["Nav.Loans"]</a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <form asp-area="" asp-controller="Preferences" asp-action="SetTheme" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="theme" value="@nextTheme" />
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                            <button type="submit" class="btn btn-sm btn-outline-secondary">
                                @L["Ui.Theme"]: @(theme == "dark" ? L["Ui.ThemeDark"] : L["Ui.ThemeLight"])
                            </button>
                        </form>

                        <button type="button"
                                class="btn btn-sm btn-outline-secondary"
                                onclick="switchLanguage('@nextCulture')">
                            @L["Ui.Language"]: @(string.Equals(currentLang, "en-US", StringComparison.OrdinalIgnoreCase) ? "EN" : "PL")
                        </button>

                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Biblioteka - <a asp-area="" asp-controller="Home" asp-action="Privacy">@L["Nav.Privacy"]</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
