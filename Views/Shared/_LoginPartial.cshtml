@using Microsoft.AspNetCore.Identity
@using Biblioteka.Data          @* albo Biblioteka.Models – tam gdzie masz ApplicationUser *@
@using Microsoft.Extensions.Localization
@using Biblioteka
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IStringLocalizer<SharedResource> L

@{
    var path = Context.Request.Path.Value?.ToLower() ?? "";
    bool isLoginPage = path.Contains("/identity/account/login");
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- UŻYTKOWNIK ZALOGOWANY -->
        <li class="nav-item">
            <a class="nav-link"
               asp-area="Identity"
               asp-page="/Account/Manage/Index">
                @L["Auth.Hello"] @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form asp-area="Identity"
                  asp-page="/Account/Logout"
                  method="post">
                <button type="submit" class="nav-link btn btn-link">
                    @L["Auth.Logout"]
                </button>
            </form>
        </li>
    }
    else
    {
        <!-- UŻYTKOWNIK NIEZALOGOWANY -->

        @* Login – ale NIE na stronie logowania *@
        @if (!isLoginPage)
        {
            <li class="nav-item">
                <a class="nav-link"
                   asp-area="Identity"
                   asp-page="/Account/Login">
                    @L["Auth.Login"]
                </a>
            </li>
        }

        @* Register – zawsze widoczne *@
        <li class="nav-item">
            <a class="nav-link"
               asp-area="Identity"
               asp-page="/Account/Register">
                @L["Auth.Register"]
            </a>
        </li>
    }
</ul>