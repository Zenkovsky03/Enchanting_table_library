@model IEnumerable<SavedSearch>

@{
    ViewData["Title"] = "Zapisane wyszukiwania";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 fw-bold mb-1">Zapisane wyszukiwania</h1>
            <p class="text-muted mb-0">Historia Twoich zapisanych zapytań.</p>
        </div>
        <a class="btn btn-primary" asp-controller="Search" asp-action="Advanced">Nowe wyszukiwanie</a>
    </div>

    @if (TempData["SavedSearchMessage"] is string msg && !string.IsNullOrWhiteSpace(msg))
    {
        <div class="alert alert-info">@msg</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-secondary mb-0">Nie masz jeszcze zapisanych wyszukiwań.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Nazwa</th>
                        <th>Utworzono</th>
                        <th class="text-end">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Name</td>
                            <td class="text-muted">@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary" asp-action="Run" asp-route-id="@item.Id">Uruchom</a>
                                <form class="d-inline" asp-action="Delete" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Usunąć zapisane wyszukiwanie?');">Usuń</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
