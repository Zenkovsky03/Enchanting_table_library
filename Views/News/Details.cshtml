@model News

@{
    ViewData["Title"] = Model.Title;
}

<article class="container py-4" style="max-width: 800px;">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Aktualności</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <header class="mb-4">
        <h1 class="h2 fw-bold mb-3">@Model.Title</h1>
        <div class="d-flex align-items-center gap-3 text-muted">
            <span class="d-flex align-items-center gap-1">
                <span class="material-symbols-outlined" style="font-size: 1.25rem;">calendar_today</span>
                @Model.PublishDate.ToString("d MMMM yyyy")
            </span>
            @if (!Model.IsPublished)
            {
                <span class="badge bg-warning text-dark">Wersja robocza</span>
            }
        </div>
    </header>

    <div class="news-image-placeholder mb-4 rounded-3 d-flex align-items-center justify-content-center"
         style="height: 300px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <span class="material-symbols-outlined text-white" style="font-size: 5rem; opacity: 0.8;">newspaper</span>
    </div>

    <div class="news-content fs-5 lh-lg">
        @Html.Raw(Model.Content.Replace("\n", "<br />"))
    </div>

    <hr class="my-4" />

    <div class="d-flex justify-content-between align-items-center">
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">
            <span class="material-symbols-outlined align-middle me-1" style="font-size: 1.25rem;">arrow_back</span>
            Powrót do aktualności
        </a>
        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
        {
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">
                <span class="material-symbols-outlined align-middle me-1" style="font-size: 1.25rem;">edit</span>
                Edytuj
            </a>
        }
    </div>
</article>
